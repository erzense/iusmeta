<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ius Meta</title>
    <link rel="stylesheet" href="../css/components/navbar.css" />
    <link rel="stylesheet" href="../css/main.css" />
    <link rel="stylesheet" href="../css/about.css" />

    <style>
      .admin-detail {
        width: 100%;
        padding: 100px;
        color: white;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 20px;
      }

      .container img {
        width: 160px;
        height: 160px;
        border-radius: 50%;
      }

      .adminPosts {
        padding: 0px 100px;
        width: 100%;
        display: flex;
        gap: 40px;
        margin-bottom: 100px;
      }

      .articleShowcase {
        display: flex;
        flex-direction: column;
        justify-content: start;
        align-items: start;
        gap: 10px;
      }

      .articleShowcase img {
        width: 240px;
        height: 160px;
      }

      @media only screen and (max-width: 600px) {
        .admin-detail {
          padding: 10px;
        }
      }
    </style>
  </head>
  <body>
    <%- include('partials/navbar') %>
    <div class="container">
      <div class="admin-detail">
        <div class="admin-image">
          <img src="../images/<%= admin.image %>" alt="" />
        </div>
        <p><%= admin.cv %></p>
      </div>
    </div>

    <label style="font-size: 36px; padding: 0px 100px" for=""
      >Yazarın İçerikleri</label
    >
    <div class="adminPosts">
      <% contents.forEach(content => { %>
      <div class="articleShowcase">
        <a href="/contents/<%= content._id %>">
          <img src="<%= content.image %>" alt=""
        /></a>
        <a href="/contents/<%= content._id %>">
          <h3><%= content.title %></h3></a
        >
      </div>
      <% }) %>
    </div>
  </body>
</html>
